{{ $CurrentContainer := where $ "ID" .Docker.CurrentContainerID | first }}

{{ range $host, $containers := groupBy $ "Env.VIRTUAL_HOST" }}

upstream {{ $host }}.%DOCKER_DOMAIN% {

  {{ range $container := $containers }}
    {{ range $knownNetwork := $CurrentContainer.Networks }}
      {{ range $containerNetwork := $container.Networks }}
        {{ if (or (eq $knownNetwork.Name $containerNetwork.Name) (eq $knownNetwork.Name "host")) }}
	       	  {{ $port := $container.Env.VIRTUAL_PORT }}
		  {{ $address := where $container.Addresses "Port" $port | first }}

    server {{ $containerNetwork.IP }}:{{ $address.Port }};

	{{ else }}

    # Cannot connect to network of this container
    server 127.0.0.1 down;

	{{ end }}
      {{ end }}
    {{ end }}
  {{ end }}
}

server {
    server_name {{ $host }}.%DOCKER_DOMAIN%;
    location / {
        proxy_pass http://{{ $host }}.%DOCKER_DOMAIN%/;
    }    
}
{{ end }}

server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root  /data;
    location / {
    }
    location /files/ {
      autoindex on;
    }
}
